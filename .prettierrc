{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "strict",
        "printWidth": 120
      }
    },
    {
      "files": "*.django",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "strict",
        "printWidth": 120
      }
    }
  ]
}
